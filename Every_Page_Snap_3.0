        function make_next(curr){
            let ym;
            let y;
            let m;
            ym=parseInt(curr, 10); // 10é€²æ•°å€¤åŒ–
            y=Math.floor(ym/100); // å¹´ã¯100ã§å‰²ã£ãŸå•†
            m=ym % 100; // æœˆã¯100ã§å‰²ã£ãŸä½™ã‚Š
            if(m !=12){
